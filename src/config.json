{
    "data": {
        "geno_file": "data/Wheat1k.recode.vcf",
        "pheno_file": "data/wheat1k.pheno.txt",
        "output_dir": "output"
    },
    "preprocessing": {
        "maf_threshold": 0.05,
        "missing_threshold": 0.1,
        "gwas_p_threshold": 0.05,
        "top_n_snps": 1000,
        "top_n_snps_grid": [1000,3000,5000]
    },
    "training": {
        "test_size": 0.2,
        "random_state": 42,
        "n_splits": 5,
        "n_jobs": 32,
        "cv": 5
    },
    "models": {
        "RandomForest": {
            "class": "RandomForestModel",
            "task_type": "regression",
            "n_estimators": 100,
            "max_depth": 10,
            "min_samples_split": 2,
            "max_features": "sqrt",
            "random_state": 42,
            "n_jobs": 32,
            "param_grid": {
                "n_estimators": [100, 200],
                "max_depth": [5, 10, 15, 20],
                "min_samples_split": [2, 5],
                "max_features": ["sqrt"]
            }
        },
        "XGBoost": {
            "class": "XGBoostModel",
            "task_type": "regression",
            "n_estimators": 1000,
            "max_depth": 6,
            "learning_rate": 0.1,
            "subsample": 0.8,
            "colsample_bytree": 0.8,
            "random_state": 42,
            "n_jobs": 32,
            "param_grid": {
                "max_depth": [3, 6, 9],
                "learning_rate": [0.01, 0.1],
                "subsample": [0.8],
                "colsample_bytree": [0.8],
                "min_child_weight": [1, 3, 5],
                "gamma": [0, 0.1, 0.2]
            }
        },
        "LightGBM": {
            "class": "LightGBMModel",
            "task_type": "regression",
            "n_estimators": 1000,
            "max_depth": 3,
            "learning_rate": 0.1,
            "subsample": 0.8,
            "colsample_bytree": 0.8,
            "min_child_samples": 10,
            "min_child_weight": 0.001,
            "min_split_gain": 0.0,
            "reg_alpha": 0.1,
            "reg_lambda": 0.1,
            "verbose": -1,
            "random_state": 42,
            "n_jobs": 32,
            "param_grid": {
                "max_depth": [3, 5, 7],
                "learning_rate": [0.01, 0.1],
                "num_leaves": [31, 63, 127],
                "min_child_samples": [10],
                "reg_alpha": [0.1],
                "reg_lambda": [0.1]
            }
        },
        "Lasso": {
            "class": "LassoModel",
            "task_type": "regression",
            "alpha": 0.01,
            "max_iter": 2000,
            "tol": 1e-4,
            "random_state": 42,
            "param_grid": {
                "alpha": [0.001, 0.01, 0.1, 1.0]
            }
        },
        "CNN": {
            "class": "CNNModel",
            "task_type": "regression",
            "hidden_sizes": [128, 64, 32],
            "dropout_rate": 0.3,
            "learning_rate": 0.001,
            "batch_size": 32,
            "epochs": 200,
            "early_stopping_patience": 20,
            "weight_decay": 1e-5,
            "num_workers": 2,
            "pin_memory": true,
            "use_gpu": false,
            "param_grid": {
                "hidden_sizes": [[64, 32, 16], [128, 64, 32], [256, 128, 64]],
                "dropout_rate": [0.2, 0.3, 0.4],
                "learning_rate": [0.0001, 0.001, 0.01],
                "batch_size": [16, 32, 64],
                "num_workers": [2],
                "pin_memory": [true],
                "use_gpu": [false]
            }
        }
    }
} 